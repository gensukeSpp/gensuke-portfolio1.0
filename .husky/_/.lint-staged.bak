    "lint-staged": {
        "*.{js,ts,tsx}": [
            "prettier --write",
            "eslint --fix"
        ],
        "*.{css,scss}": [
            "prettier --write",
            "stylelint --allow-empty-input --fix"
        ]
    },
    "simple-git-hooks": {
        "pre-commit": "npx lint-staged"
    }

